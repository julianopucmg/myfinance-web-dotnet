@model TransacaoModel

@{
    ViewData["Title"] = "Cadastro de Transações";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>

<div yclass="form-control">
  <form asp-controller="Transacao" asp-action="Cadastro" method="post">
    <div class="container">
      <div class="mb-3">
        <label class="form-label">Data</label>
        <input type="hidden" id="txtId" class="form-control" asp-for="Id">
        <input type="date" id="txtData" class="form-control" asp-for="Data">
      </div>
    </div>

    <div class="mb-3">
      <label class="form-label">Valor</label>
      <input type="text" id="txtValor" class="form-control" asp-for="Valor" step="0.01" />
    </div>    

    <div class="mb-3">
      <label class="form-label">Item Plano Conta</label>
      @Html.DropDownListFor(m => m.PlanoContaId, Model.PlanoContas, new { @class = "form-select" })
    </div>     

    <div class="mb-3">
      <label class="form-label">Historico</label>
      <input type="text" id="txtNome" class="form-control" asp-for="Historico" />
    </div>   
    
    <div style="text-align:center">
      <button type="submit" class="btn btn-primary btn-lg" onclick="">Salvar</button>
      <button type="button" class="btn btn-secondary btn-lg" onclick="Voltar()">Cancelar</button>
    </div>
  </form>  

  <script>
    function Voltar() {
      window.location.href = "../"
    }
  </script>
</div>



