@{
    ViewData["Title"] = "Transações Financeiras";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>

<p><button type="button" class="btn btn-primary" onclick="Cadastrar()">Cadastrar Transação</button></p>

<table class="table">
  <thead class="table-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">DATA</th>
      <th scope="col">HISTORICO</th>      
      <th scope="col">VALOR</th>      
      @* <th scope="col">TIPO OPERAÇÃO</th>
      <th scope="col">PLANO CONTA</th> *@
      <th scope="col">#</th>
      <th scope="col">#</th>      
    </tr>
  </thead>
  <tbody>
    @{

        foreach(var item in (List<TransacaoModel>)ViewBag.Transacoes){
            <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Data</td>
            <td>@item.Historico</td>
            <td>@item.Valor</td>
            @* <td>@item.ItemPlanoConta.Tipo</td>
            <td>@item.ItemPlanoConta.Descricao</td>       *@
            <td><button type="button" class="btn btn-primary" onclick="Editar(@item.Id)">Editar</button></td>      
            <td><button type="button" class="btn btn-danger" onclick="Excluir(@item.Id)">Exluir</button></td>      
            </tr>
        }   

    }
</table>

<script>

    function Cadastrar(){
        window.location.href = "../Transacao/Cadastro"
    }

    function Editar(id){         
        console.log(id);   
        window.location.href = "../Transacao/Cadastro/" + id
    }

    function Excluir(id){            
        window.location.href = "../Transacao/Excluir/" + id
    }

</script>