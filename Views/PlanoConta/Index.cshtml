@{
    ViewData["Title"] = "Plano de Contas";
}

<div class="text-center">
    <h1>@ViewData["Title"]</h1>
</div>

<p><button type="button" class="btn btn-primary" onclick="Cadastrar()">Cadastrar Plano Conta</button></p>

<table class="table">
  <thead class="table-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">DESCRICAO</th>
      <th scope="col">TIPO</th>      
      <th scope="col"></th>      
      <th scope="col"></th>      
    </tr>
  </thead>
  <tbody>
    @{

        foreach(var item in (List<PlanoContaModel>)ViewBag.ListaPlanoConta){
            <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Descricao</td>
            <td>@item.Tipo</td>      
            <td><button type="button" class="btn btn-primary" onclick="Editar(@item.Id)">Editar</button></td>      
            <td>@Html.ActionLink("Excluir", "Excluir", "PlanoConta", new { Id = @item.Id }, new { @class = "btn btn-danger" })</td>      
            </tr>
        }   

    }
</table>

<script>

    function Cadastrar(){
        window.location.href = "../PlanoConta/Cadastro"
    }

    function Editar(id){            
        window.location.href = "../PlanoConta/Cadastro/" + id
    }

</script>